<% include partials/header %>


<div class="container">
<header class="jumbotron">
    <h1>Welcome to YelpCamp</h1>
    <p>View all the amazing camping sites from all around the world</p>
    <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
    </p>
    
</header>


<div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <div class="col-lg-12">
        <h3>Most Popular Campsites</h3>
    </div>


<% campgrounds.forEach(function(campground){ %>
    
    <div class="col-md-3 col-sm-6">
       <div class="img-thumbnail">
           <img class="img-thumbnail" src="<%= campground.image %>">
           <div class="caption">
                <h5><%= campground.name %></h5>
           </div>
            <p><a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a></p>
       </div>
        
       
    </div>
    <% }); %>
</div>
</div>

<% include partials/footer %>